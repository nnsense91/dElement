.menu {
	width: 32px;
	height: 32px;
	background-color: transparent;
	padding: 0;
	margin: 0;
	display: flex;
	justify-content: center;
	align-items: center;
}

.menu__content {
	position: relative;
	width: 24px;
	height: 17px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}

.menu__bar {
	width: 24px;
	height: 3px;
	background-color: $main-blue-color;
}